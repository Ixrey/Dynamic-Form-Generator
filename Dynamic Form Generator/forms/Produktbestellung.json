            "options": [
                "IT",
                "Einkauf",
                "Vertrieb",
                "Produktion",
                "Management"
            ]
        },
        {
            "id": "productCategory",
            "label": "Produktkategorie",
            "controlType": "dropdown",
            "dataType": "string",
