            "options": [
                "Server",
                "Workstations",
                "Zubehör",
                "Netzwerkgeräte",
                "Softwarelizenzen"
            ]
        },
        {
            "id": "productModel",
            "label": "Gewünschtes Modell",
            "controlType": "textfield",
            "dataType": "string",
            "required": false
        },
        {
            "id": "quantity",
            "label": "Menge",
            "controlType": "spinner",
            "dataType": "int",
            "required": true
        },
        {
            "id": "deliveryDate",
            "label": "Lieferdatum (Wunsch)",
            "controlType": "date",
            "dataType": "date",
