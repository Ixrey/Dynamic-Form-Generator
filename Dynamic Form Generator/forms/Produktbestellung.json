            "controlType": "textfield",
            "dataType": "string",
            "required": true
        },
        {
            "id": "contactPerson",
            "label": "Kontaktperson",
            "controlType": "textfield",
            "dataType": "string",
            "required": true
        },
        {
            "id": "email",
            "label": "E-Mail-Adresse",
            "controlType": "textfield",
            "dataType": "string",
            "required": true
        },
        {
            "id": "phone",
            "label": "Telefonnummer",
            "controlType": "textfield",
            "dataType": "string",
            "required": false
        },
        {
            "id": "department",
            "label": "Abteilung",
            "controlType": "dropdown",
            "dataType": "string",
