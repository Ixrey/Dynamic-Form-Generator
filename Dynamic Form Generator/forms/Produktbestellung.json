        {
            "id": "paymentMethod",
            "label": "Bevorzugte Zahlungsart",
            "controlType": "dropdown",
            "dataType": "string",
            "required": false,
            "options": [
                "Rechnung",
                "Vorkasse",
                "Lastschrift",
                "Kreditkarte"
            ]
        },
        {
            "id": "notes",
            "label": "Weitere Hinweise",
            "controlType": "textarea",
            "dataType": "string",
            "required": false
